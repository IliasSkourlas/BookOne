<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookOne</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        .container-fluid .navbar-brand {
            margin-left: -200px;
        }
        #MyNavbar {
            background-color: rgba(21, 226, 226, 0.9); /*transparent;*/
            border-bottom: none;
            opacity: 0.69;
            filter: alpha(opacity=30)
        }

        .navbar-brand{
            font-size: 30px;
        }
        .navbar-nav {
            font-size: 25px;
        }
        .navbar-inverse .navbar-nav > li > a {
            color: cyan;
            opacity: 0.9;
        }
        
        .nav > li > a:hover {
            background-color: #FCC;
            
        }
        .navbar-inverse .navbar-brand {
            color: #FFC0CB;
        }


        body {
            background-image: linear-gradient(rgb(255, 0, 0),rgba(0,0,0,0.1)), url('../../Content/images/TenTen.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            color: #fff;
        }
        video {
            height: 100vh;
            width: 100%;
            object-fit: fill;
            position: absolute;
            opacity: 0.2;
        }
        #AboutText {
            margin-top: 32%;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            font-size: large;
            color: rgba(255, 255, 255, 1);
            text-align: center;
            letter-spacing: 4px;
        }
    </style>

</head>
<body>

    <video id="video" autoplay loop muted>
        <source src="~/Content/images/fish2.mp4" type="video/mp4" />
    </video>

    <div id="MyNavbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BookOne", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Books", "Index", "Books")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">


        @RenderBody()

    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
