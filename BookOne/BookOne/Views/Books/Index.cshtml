@model IEnumerable<BookOne.BookOne_Domain.Book>

@{
    Layout = "~/Views/Shared/_Layout - User1.cshtml";
}

@{
    ViewBag.Title = "Books";
}




<style type="text/css">

    body {
        background-image: linear-gradient(rgb(255, 0, 0),rgba(0,0,0,0.1)), url('../../Content/images/TenTenCut.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    
</style>



<div> msg for developers......................click inside the yellow area </div>
<table id="listOfBooks" class="table">
    <tr class="header" >
        <th  onclick="document.getElementById('searchInput').placeholder='Book'">
           
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th class="author" onclick="document.getElementById('searchInput').placeholder='Author'">
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th class="owner" onclick="document.getElementById('searchInput').placeholder='Owner'">
            By
        </th>
        <th class="Status" onclick="document.getElementById('searchInput').placeholder='Availability'">
            Availability
        </th>
    </tr>



    @foreach (var item in Model)
    {
        <tr class="bookTitle">
            <td >
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="author">
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td class="owner">
                @Html.DisplayFor(modelItem => item.Owner.ActualUsername)
            </td>
            <td class="Status">
                @if (item.AvailabilityStatus == true)
                {
                    @Html.ActionLink("Available", "RequestConfirmation", "Player", new { bookId = item.BookId }, null)
                }
                else
                {
                    <p>Unavailable</p>
                }
            </td>
        </tr>
    }
</table>



<script>





    function hideAll() {
        $('.author').hide();
        $('.owner').hide();
       
    }

    var n = 0;
    var i = 1;

    function rotate() {
        n = n + i;
        if (n === 0) {
            i = 1;
        }
        if (n === 1) {
            console.log("new", n);
            new function () {
                $('.author').show();
                $('.Status').hide();
                
            }
        }
        if (n === 2) {
            console.log("new", n);
            new function () {
                $('.author').hide();
                $('.owner').show();
            }
        }
        if (n === 3) {
            console.log("new", n);
            new function () {
                $('.owner').hide();
                $('.Status').show();
                


            }
        }
        if (n === 4) {
            n = 1;
            new function () {
                console.log("new", n);

                $('.author').show();
                $('.Status').hide();
            }
        }

        
    }

</script>

