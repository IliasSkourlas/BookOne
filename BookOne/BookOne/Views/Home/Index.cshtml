@{
    ViewBag.Title = "Home Page";
}
@{
    Layout = "~/Views/Shared/_Layout - About.cshtml";
}


<style type="text/css">

    :root {
        --main-border-top-color: 1px solid rgba(255, 255, 255, 0.12);
        --main-Header-color: rgb(0, 255, 255);
        --main-HeaderHover-color: rgba(0, 255, 255, 0.84);
    }
    body {
        background-image: linear-gradient(rgb(255, 0, 0),rgba(0,0,0,0.1)), url('../../Content/images/TenTenCut.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    .container body-content {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-size: 18px;
        color: rgba(255, 255, 255, 1);
    }

    

    .container-fluid .navbar-brand {
        margin-left: -200px;
    }

   


    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--main-HeaderHover-color);
        font-size: large;
    }

    #about {
        transition: opacity 2s;
    }


    /*this works but!*/
    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.8);
    }


    #button {
        background-color: rgba(255, 255, 255, 0.3);
        color: rgba(255, 255, 255, 0.8);
    }

        #button:hover {
            background-color: rgba(0, 255, 255, 0.43);
            border-color: var(--main-HeaderHover-color);
        }

    .form-row {
        transition: opacity 3s;
        opacity: 0;
    }

    a {
        color: rgba(255, 255, 255, 0.8);
    }
    #logoutForm > ul > li:nth-child(1) > a {
        background-color: transparent;
        
    }
    #logoutForm > ul > li:nth-child(1) > a:hover {
        color: var(--main-HeaderHover-color);
    }
    #logoutForm > ul > li:nth-child(2) > a {
        background-color: transparent;
    }
    #logoutForm > ul > li:nth-child(2) > a:hover {
        color: var(--main-HeaderHover-color);
    }


    #loginLink {
        background-color: transparent;
    }
    #loginLink::after hover {
        color: var(--main-HeaderHover-color);
    }
    #registerLink {
        background-color: transparent;
    }
    #registerLink:hover {
        color: var(--main-HeaderHover-color);
    }



    .center {
        position: relative;
        text-align: center;
    }

    #AboutText {
        margin-top: 17%;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-size: large;
        color: rgba(255, 255, 255, 1);
        letter-spacing: 4px;
    }

    #positionPoint0 {
        position: relative;
    }

    #inputEmail4 {
        position: relative;
        left: 50%;
        transform: translateX(-50%);
    }
    #soFar {
        position: relative;
        bottom:4%;
    }
   
    
</style>





<div id="mouseMove" onmouseout="showEmail()">



    <div class="center">

        <div id="AboutText">
            <div id="about">
                <h1>we are aiming on rediscovering the world of your </h1>
                <h1>books.</h1>
            </div>


            @*<h2>
                    This is an app for searing your books with your friends. Not digital books, but your physical books.
                    It helps you to keep track with their whereabouts, as they are seared from a pool of carriers that you choose.
                    Read and write reviews and decide to give or not a Clap, when they are returned back to you in perfect condition.
                    So...explore and have fun...and don't hesitate searing!
                </h2>*@



            <div id="positionPoint0">
                <form action="/Home/EmailNotifier" method="Post" class="form-horizontal">
                    <div class="form-row">

                        <div class="form-group">
                            <h2 for="inputEmail">...and we will keep you informed</h2>
                            <br /><br /><br />
                            <input id="inputEmail4" type="email" name="userEmail" class="form-control" placeholder="give us your email...">
                            <br /><br /><br />

                        </div>

                        <button id="button" type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>

                <br />
                <div id="soFar" class="form-row"><p><spam>... </spam> <spam id="counter"> @Html.Action("EmailNotificationsCounter", "Home", new { area = "" }) </spam> <spam> emails so far</spam></p></div>
            </div>


            @ViewBag.Success
        </div>

    </div>


</div>


    <script>

        ///////  Add count with a new email
        document.getElementById("button").addEventListener("click", addOne);

        var count = 1;

        function addOne() {
            var x = document.getElementById("emailInput").value;


            // Make better
            if (x.length > 12 && x.includes("") && x.includes(".")) {
                count += 1;
                document.getElementById("counter").innerHTML = count;
                document.getElementById("emailInput").value = "";
            }
            document.getElementById("emailInput").value = "";
        }





        /// hide and show
        function showEmail() {
            $(".form-row").css("opacity", "1");

            $("#about").css("opacity", "0");
        };

        function hideEmail() {
            $(".form-row").css("opacity", "0");

            $("#about").css("opacity", "1");
        };



    </script>



